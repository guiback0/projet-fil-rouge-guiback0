{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Date_naissance</th>
                <th>Telephone</th>
                <th>Date_inscription</th>
                <th>Adresse</th>
                <th>Horraire</th>
                <th>Heure_debut</th>
                <th>Jours_semaine_travaille</th>
                <th>Poste</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.dateNaissance ? user.dateNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ user.telephone }}</td>
                <td>{{ user.dateInscription ? user.dateInscription|date('Y-m-d') : '' }}</td>
                <td>{{ user.adresse }}</td>
                <td>{{ user.horraire ? user.horraire|date('H:i:s') : '' }}</td>
                <td>{{ user.heureDebut ? user.heureDebut|date('H:i:s') : '' }}</td>
                <td>{{ user.joursSemaineTravaille }}</td>
                <td>{{ user.poste }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
