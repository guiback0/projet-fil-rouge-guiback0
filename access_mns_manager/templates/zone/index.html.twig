{% extends 'base.html.twig' %}

{% block title %}Zone index{% endblock %}

{% block body %}
    <h1>Zone index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_zone</th>
                <th>Description</th>
                <th>Capacite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for zone in zones %}
            <tr>
                <td>{{ zone.id }}</td>
                <td>{{ zone.nomZone }}</td>
                <td>{{ zone.description }}</td>
                <td>{{ zone.capacite }}</td>
                <td>
                    <a href="{{ path('app_zone_show', {'id': zone.id}) }}">show</a>
                    <a href="{{ path('app_zone_edit', {'id': zone.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_zone_new') }}">Create new</a>
{% endblock %}
