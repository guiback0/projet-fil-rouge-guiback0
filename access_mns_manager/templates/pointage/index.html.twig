{% extends 'base.html.twig' %}

{% block title %}Pointage index{% endblock %}

{% block body %}
    <h1>Pointage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Heure</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pointage in pointages %}
            <tr>
                <td>{{ pointage.id }}</td>
                <td>{{ pointage.heure ? pointage.heure|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ pointage.type }}</td>
                <td>
                    <a href="{{ path('app_pointage_show', {'id': pointage.id}) }}">show</a>
                    <a href="{{ path('app_pointage_edit', {'id': pointage.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_pointage_new') }}">Create new</a>
{% endblock %}
