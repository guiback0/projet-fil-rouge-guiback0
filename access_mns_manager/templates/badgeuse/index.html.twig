{% extends 'base.html.twig' %}

{% block title %}Badgeuse index{% endblock %}

{% block body %}
    <h1>Badgeuse index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Reference</th>
                <th>Date_installation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for badgeuse in badgeuses %}
            <tr>
                <td>{{ badgeuse.id }}</td>
                <td>{{ badgeuse.reference }}</td>
                <td>{{ badgeuse.dateInstallation ? badgeuse.dateInstallation|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_badgeuse_show', {'id': badgeuse.id}) }}">show</a>
                    <a href="{{ path('app_badgeuse_edit', {'id': badgeuse.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_badgeuse_new') }}">Create new</a>
{% endblock %}
